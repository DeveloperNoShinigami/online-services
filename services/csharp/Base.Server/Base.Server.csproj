<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <IncludeSymbols>true</IncludeSymbols>
    <IncludeBuildOutput>true</IncludeBuildOutput>
    <PackageId>Improbable.OnlineServices.Base.Server</PackageId>
    <AssemblyName>Improbable.OnlineServices.Base.Server</AssemblyName>
    <RootNamespace>Improbable.OnlineServices.Base.Server</RootNamespace>
    <Version>1.0.0</Version>
    <Company>Improbable Worlds Ltd.</Company>
    <Authors>Improbable Worlds Ltd.</Authors>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.3.0" />
    <PackageReference Include="Grpc.Core" Version="1.19.0" />
    <PackageReference Include="LibLog" Version="5.0.3" />
    <PackageReference Include="NetGrpcPrometheus" Version="1.0.14" />
  </ItemGroup>
  <Choose>
    <When Condition=" '$(Configuration)'=='Release' ">
      <ItemGroup>
        <PackageReference Include="Improbable.OnlineServices.Common" Version="1.0.0" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <ProjectReference Include="..\Common\Common.csproj" />
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>
